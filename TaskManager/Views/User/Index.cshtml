@using EntityLayer.Concrete
@model List<User>
@{
    ViewData["Title"] = "Index";
}

<h1>User</h1>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>UserName</th>
        <th>Name</th>
        <th>Surname</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserId</td>
            <td>@item.UserName</td>
            <td>@item.Name</td>
            <td>@item.SurName</td>
        </tr>
    }
</table>
<a href="#" class="btn btn-info">Add User</a>